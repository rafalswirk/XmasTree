<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XmasTreeApp.Pages.XmasTreeLightingModePage"
             Title="Select Xmas Tree lighting mode" Loaded="ContentPage_Loaded">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="White" Offset="0.1" />
            <GradientStop Color="LightSkyBlue" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Grid>
        <Image  Source="xmas_tree.png" Aspect="AspectFit"/>
        <ScrollView Margin="10">
            <VerticalStackLayout x:Name="mainPanel"
                Spacing="20" 
                Padding="25,0"
                VerticalOptions="Center">
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>